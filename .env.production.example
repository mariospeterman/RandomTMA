# Telegram Mini App Configuration
TELEGRAM_BOT_TOKEN="YOUR_TELEGRAM_BOT_TOKEN"
VITE_TELEGRAM_BOT_TOKEN="YOUR_TELEGRAM_BOT_TOKEN"
VITE_TELEGRAM_BOT_USERNAME="YOUR_BOT_USERNAME"

# TON Connect Configuration
VITE_TON_MANIFEST_URL="https://your-domain.com/tonconnect-manifest.json"
# Network Configuration (testnet or mainnet)
VITE_TON_NETWORK="mainnet"

# TON API Access
TONCENTER_TOKEN="YOUR_TONCENTER_TOKEN"

# Payment Configuration
# The wallet address that will receive subscription payments
VITE_MERCHANT_WALLET="YOUR_MERCHANT_WALLET_ADDRESS"

# Subscription settings
VITE_SUBSCRIPTION_AMOUNT_MONTHLY="5"
VITE_SUBSCRIPTION_AMOUNT_YEARLY="50"

# Server settings
PORT=5000
NODE_ENV="production"

# Session security
SESSION_SECRET="GENERATE_A_STRONG_RANDOM_STRING"

# WebRTC TURN Server Configuration
# Configure your own TURN server for production
VITE_TURN_SERVER_URLS="turn:your-turn-server.com:3478,turn:your-turn-server.com:3478?transport=tcp,turns:your-turn-server.com:5349?transport=tcp"
VITE_TURN_USERNAME="your_turn_username"
VITE_TURN_PASSWORD="your_turn_password"

# Socket.io Configuration
VITE_SOCKET_RECONNECTION_ATTEMPTS="Infinity"
VITE_SOCKET_RECONNECTION_DELAY="1000"
VITE_SOCKET_RECONNECTION_DELAY_MAX="30000"
VITE_SOCKET_TIMEOUT="20000"

# Monitoring and Performance
VITE_ENABLE_PERFORMANCE_MONITORING="true"
VITE_STATS_MONITORING_INTERVAL="3000" 